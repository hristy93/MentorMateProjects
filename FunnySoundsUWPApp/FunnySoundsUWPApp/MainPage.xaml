    </Page.Resources>

    <Page.DataContext>
        <local:FunnySoundsViewModel/>
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">
                <VisualState x:Name="VisualStateNormal">
                    <VisualState.Setters>
                        <Setter Target="SoundsCollectionSplitView.(SplitView.DisplayMode)" Value="CompactOverlay"/>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="VisualStateSmall">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="SoundsCollectionSplitView.(SplitView.DisplayMode)" Value="Inline"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <RelativePanel
            x:Name="FunnySoundsRelativePanel">
            <Button 
                x:Name="HamburgerMenuButton"
                FontFamily="Segoe MDL2 Assets"
                Grid.Row="0"
                Content="&#xE700;"
                Width="48"
                Height="48"
                RelativePanel.AlignLeftWithPanel="True" 
                Command="{Binding HamburgerMenuButtonOnClick, Mode=OneWay, Source={StaticResource DataManipulationViewModel}}"
                />
            <Button
                x:Name="BackButton"
                FontFamily="Segoe MDL2 Assets"
                Grid.Row="0"
                Content="&#xE0A6;"
                Width="48"
                Height="48"
                Visibility="{Binding IsBackButtonVisible, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter ={StaticResource boolToVisibilityConverter}}"
                RelativePanel.RightOf="HamburgerMenuButton"
                Command="{Binding BackButtonOnClick, Mode=OneWay, Source={StaticResource DataManipulationViewModel}}"
                Visibility="{Binding IsBackButtonVisible, Mode=TwoWay, Source={StaticResource DataManipulationViewModel}, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <AutoSuggestBox
                x:Name="SoundSearchAutoSuggestBox"
                RelativePanel.AlignRightWithPanel="True"
                Width="200"
                Grid.Row="0"
                QueryIcon="Find"
                Margin="0,4,12,0"
                TextChanged="{Binding SoundSearchAutoSuggestBoxOnTextChanged, Mode=OneWay, Source={StaticResource DataManipulationViewModel}}"
                QuerySubmitted="SoundSearchAutoSuggestBox_QuerySubmitted"/>

            <SplitView 
                x:Name="SoundsCollectionSplitView"
                RelativePanel.Below="HamburgerMenuButton"
                DisplayMode="Inline"
                Grid.Row="1"
                CompactPaneLength="48"
                IsPaneOpen="True"
                OpenPaneLength="200">
            <!--IsPaneOpen="{Binding IsSplitViewPaneOpen, Converter={StaticResource BoolToVisibilityConverter}, Source={StaticResource DataManipulationViewModel}}">-->
                <SplitView.Pane>
                    <ListView 
                       x:Name="FunnySoundsMenuListView"
                       IsItemClickEnabled="True"
                       ItemsSource="{x:Bind Path=MenuItems, Mode=OneWay}"
                       ItemClick="FunnySoundsMenuListView_ItemClick">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="data:MenuItemModel">
                                <StackPanel Orientation="Horizontal">
                                    <Image x:Name="FunnySoundTypeImage" 
                                       Source="{x:Bind IconFilePath}"
                                       Width="36"
                                       Height="36"
                                       Margin="-8,12,0,0"/>
                                    <TextBlock 
                                       x:Name="FunnySoundTypeTitle" 
                                       Text="{x:Bind Type}"
                                       Margin="12,0,0,0"
                                       VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </SplitView.Pane>

                <SplitView.Content>
                    <Grid 
                        Margin="20"
                        ScrollViewer.HorizontalScrollBarVisibility="Visible">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

